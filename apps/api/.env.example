# Local Development Environment Variables
# Copy this file to .env for local development
#
# Local dev uses SQLite (local.db) instead of Cloudflare D1.
# The database is auto-created on first run with migrations applied.

# Required for local development
BETTER_AUTH_SECRET=local-dev-secret-change-in-production
BETTER_AUTH_URL=http://localhost:8787
FRONTEND_URL=http://localhost:5173

# Email (optional - emails will fail gracefully if not set)
RESEND_API_KEY=
EMAIL_FROM=Thalamus <noreply@yourdomain.com>

# OAuth providers (optional - leave empty to disable)
# Email/password auth works without these
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=

ATLASSIAN_CLIENT_ID=
ATLASSIAN_CLIENT_SECRET=

# Cloudflare Turnstile (optional - captcha disabled if not set)
TURNSTILE_SECRET_KEY=

# Admin API key for admin endpoints (required for admin operations)
ADMIN_API_KEY=
