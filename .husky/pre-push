#!/bin/sh

branch=$(git rev-parse --abbrev-ref HEAD)

# Types must match commitlint.config.js
types="feat|fix|docs|style|refactor|perf|test|chore|ci|build|revert|hotfix"

# Branch naming pattern: type/description
# Examples: feat/add-button, fix/auth-bug, chore/update-deps
pattern="^($types)/[a-z0-9-]+$|^(main|master|develop)$"

if ! echo "$branch" | grep -qE "$pattern"; then
  echo "❌ Branch name '$branch' doesn't match the required pattern."
  echo ""
  echo "Valid format:"
  echo "  type/description  →  feat/add-button, fix/auth-bug"
  echo ""
  echo "Types: $types"
  exit 1
fi
